{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "types"]
}
